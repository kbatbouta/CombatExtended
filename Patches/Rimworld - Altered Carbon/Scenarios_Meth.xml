<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Rimworld: Altered Carbon</li>
    </mods>

    <match Class="PatchOperationSequence">
      <operations>

        <!-- === Shock PDW / MAC Reolver / Quickfire Pistol Ammo === -->
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ScenarioDef[defName="AC_ExiledMeths"]/scenario/parts</xpath>
          <value>
            <li Class="ScenPart_StartingThing_Defined">
              <def>StartingThing_Defined</def>
              <thingDef>Ammo_6x24mmCharged</thingDef>
              <count>300</count>
            </li>
            <li Class="ScenPart_StartingThing_Defined">
              <def>StartingThing_Defined</def>
              <thingDef>Ammo_8x35mmCharged</thingDef>
              <count>60</count>
            </li>
            <li Class="ScenPart_StartingThing_Defined">
              <def>StartingThing_Defined</def>
              <thingDef>Ammo_10mmAuto_FMJ</thingDef>
              <count>60</count>
            </li>
          </value>
        </li>

      </operations>
    </match>
  </Operation>

</Patch>