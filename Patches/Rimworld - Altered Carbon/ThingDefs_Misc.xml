<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Rimworld: Altered Carbon</li>
    </mods>

    <match Class="PatchOperationSequence">
      <operations>

        <!-- === Cortical Stacks === -->
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[@Name="AC_StackBase"]/statBases</xpath>
          <value>
            <Bulk>0.16</Bulk>
          </value>
        </li>

        <!-- === Brain Templates === -->
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[@Name="AC_BrainTemplatesBase"]/statBases</xpath>
          <value>
            <Bulk>0.36</Bulk>
          </value>
        </li>

      </operations>
    </match>
  </Operation>

</Patch>