<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
	<operations>
	  <li Class="PatchOperationFindMod">
			
		<mods><li>Mincho, The Mint Choco Slime</li></mods>
			
		<match Class="PatchOperationSequence">
		<operations>

			<!-- ========== Regular ========== -->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Mincho_Knitwear" or
				defName="Mincho_Knitwear_Reverse"
				]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>5</StuffEffectMultiplierArmor>
					<Bulk>5</Bulk>
					<WornBulk>3</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="Mincho_ChocolateNegligee" or
				defName="Mincho_CupHat"
				]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="Mincho_ChocolateNegligee" or
				defName="Mincho_CupHat"
				]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>0.125</ArmorRating_Blunt>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="Mincho_ChocolateNegligee" or
				defName="Mincho_MintchocoDonutTiara"
				]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>0.10</ArmorRating_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[
				defName="Mincho_ChocolateCoatingDress" or
				defName="Mincho_MintchocoDonutTiara"
				]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>0.25</ArmorRating_Blunt>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Mincho_ChocoCrust"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>1.8</ArmorRating_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Mincho_ChocoCrust"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>2.5</ArmorRating_Blunt>
				</value>
			</li>
			
			<!-- ========== Armor ========== -->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Mincho_KnightlyDress"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>2.5</StuffEffectMultiplierArmor>
					<Bulk>15</Bulk>
					<WornBulk>7.5</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Mincho_KnightlyTiara"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>4</StuffEffectMultiplierArmor>
					<Bulk>3</Bulk>
					<WornBulk>0.5</WornBulk>
				</value>
			</li>
			
		</operations>
		</match>	
	  </li>
	</operations>	
  </Operation>
</Patch>
