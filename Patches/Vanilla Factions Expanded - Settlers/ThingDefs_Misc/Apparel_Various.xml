<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Factions Expanded - Settlers</li>
    </mods>

    <match Class="PatchOperationSequence">
      <operations>
        <!-- === Vest === -->
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="Apparel_Vest"]/statBases/StuffEffectMultiplierArmor</xpath>
          <value>
            <StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
          </value>
        </li>

        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Apparel_Vest"]/statBases</xpath>
          <value>
            <Bulk>3</Bulk>
            <WornBulk>1</WornBulk>
          </value>
        </li>

        <!-- === Great Dress === -->
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="Apparel_GreatDress"]/statBases/StuffEffectMultiplierArmor</xpath>
          <value>
            <StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
          </value>
        </li>

        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Apparel_GreatDress"]/statBases</xpath>
          <value>
            <Bulk>10</Bulk>
            <WornBulk>5</WornBulk>
          </value>
        </li>
      </operations>
    </match>
  </Operation>

</Patch>