			<li>PsiTech</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- == PTRobeBase == -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[@Name="PTRobeBase"]/statBases/StuffEffectMultiplierArmor</xpath>
