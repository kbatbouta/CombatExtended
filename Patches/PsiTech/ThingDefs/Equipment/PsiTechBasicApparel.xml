						<WornBulk>1</WornBulk>
					</value>
				</li>
				<!-- == PTPsiHood == -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="PTPsiHood"]/statBases/StuffEffectMultiplierArmor</xpath>
