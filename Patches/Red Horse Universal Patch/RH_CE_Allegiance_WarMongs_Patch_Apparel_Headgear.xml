<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
    <mods>
		<li>[RH] Faction: Allegiance</li>
		<li>[RH] Faction: War Mongrels</li>
    </mods>
		<match Class="PatchOperationSequence">
		 <operations>

				<!-- STOP SHARING DEFNAMES SO WE WOULDNT HAVE TO SEPERATE INDIVIDUAL DEFS LIKE THIS GODDAMIT -->
				<!-- ========== Tuques / Beanies ========== -->

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
					defName="RNApparel_Balaclava_PlainBlack"
					]/statBases</xpath>
					<value>
						<Bulk>1</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[
					defName="RNApparel_Balaclava_PlainBlack"
					]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<!-- Equivalent to vanilla tuque -->
						<StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
					</value>
				</li>



			</operations>
			</match>
		</Operation>
	</Patch>