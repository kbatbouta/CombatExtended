<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[RH] Faction: UAC</li>
			<li>[RH] DOOM: UAC Kit</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- ========== Business Suit ========== -->

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RNApparel_BuisnessSuit_UAC"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<Bulk>5</Bulk>
					<WornBulk>3</WornBulk>
					<ArmorRating_Sharp>12</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RNApparel_BuisnessSuit_UAC"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>26</ArmorRating_Blunt>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RNApparel_BuisnessSuit_UAC"]/statBases</xpath>
				<value>
					<StuffEffectMultiplierArmor>4</StuffEffectMultiplierArmor>
				</value>
			</li>

			</operations>
		</match>
	</Operation>
</Patch>