<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
    <mods>
		<li>[RH] Faction: UAC</li>
		<li>[RH] DOOM: UAC Kit</li>
    </mods>
		<match Class="PatchOperationSequence">
		 <operations>

			<!-- ========== UAC Phobos Helmet ========== -->

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RHApparel_DOOM_PhobosSuitHelmet"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<Bulk>7</Bulk>
					<WornBulk>1</WornBulk>
					<ArmorRating_Sharp>20</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RHApparel_DOOM_PhobosSuitHelmet"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>40</ArmorRating_Blunt>
				</value>
			</li>

			<!-- ========== UAC Helmets ========== -->

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[@Name="RH_UACPowerArmorHelmetBase"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<Bulk>7</Bulk>
					<WornBulk>1</WornBulk>
					<ArmorRating_Sharp>18</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[@Name="RH_UACPowerArmorHelmetBase"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>38</ArmorRating_Blunt>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[@Name="RH_UACPowerArmorHelmetBase"]/equippedStatOffsets</xpath>
				<value>
					<SmokeSensitivity>-1</SmokeSensitivity>
				</value>
			</li>
			
			</operations>
			</match>
		</Operation>
	</Patch>