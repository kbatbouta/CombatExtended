<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Naga Prosthetics -->
	<Operation Class="PatchOperationFindMod">
			<mods>
				<li>[SYR] Naga</li>
			</mods>
		<match Class="PatchOperationSequence">
		<operations>

			<!-- ========== Bionic Naga Tail ========== -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="BionicNagaTail"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>bionic naga tail</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>20</power>
							<cooldownTime>2.64</cooldownTime>
							<armorPenetrationBlunt>0.5</armorPenetrationBlunt>
						</li>
					</tools>
				</value>
			</li>

			<!-- ========== Archotech Naga Tail ========== -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="ArchotechNagaTail"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>archotech naga tail</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>35</power>
							<cooldownTime>1.76</cooldownTime>
							<armorPenetrationBlunt>0.75</armorPenetrationBlunt>
						</li>
					</tools>
				</value>
			</li>
		</operations>
		</match>
	</Operation>
</Patch>
