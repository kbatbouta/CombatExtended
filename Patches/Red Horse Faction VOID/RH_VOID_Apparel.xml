<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
    <mods>
		<li>[RH] Faction: VOID</li>
    </mods>
		<match Class="PatchOperationSequence">
		 <operations>

			<!-- ========== RH Apparel Base ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[@Name="RHApparelBase"]/statBases</xpath>
				<value>
					<Bulk>1</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>

			<!-- ========== Black Cloak ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RHApparel_DFCloak_Black"]/statBases</xpath>
				<value>
					<Bulk>2</Bulk>
					<WornBulk>1.5</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RHApparel_DFCloak_Black"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
				</value>
			</li>

			<!-- ========== Business Suit ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RNApparel_BuisnessSuit_VOID"]/statBases</xpath>
				<value>
					<Bulk>5</Bulk>
					<WornBulk>2</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RNApparel_BuisnessSuit_VOID"]/equippedStatOffsets</xpath>
				<value>
					<CarryBulk>20</CarryBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RNApparel_BuisnessSuit_VOID"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>18</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RNApparel_BuisnessSuit_VOID"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>28</ArmorRating_Blunt>
				</value>
			</li>

			<!-- ========== Speed Skin ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RNApparel_SpeedSkin_VOID"]/statBases</xpath>
				<value>
					<Bulk>4</Bulk>
					<WornBulk>2</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RNApparel_SpeedSkin_VOID"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>6</StuffEffectMultiplierArmor>
				</value>
			</li>

			<!-- ========== VOID Reactive Armor ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[@Name="RH_VOIDReactiveBase"]/statBases</xpath>
				<value>
					<Bulk>100</Bulk>
					<WornBulk>15</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[@Name="RH_VOIDReactiveBase"]/equippedStatOffsets</xpath>
				<value>
					<CarryBulk>50</CarryBulk>
					<Suppressability>-1.0</Suppressability>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[@Name="RH_VOIDReactiveBase"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>32</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[@Name="RH_VOIDReactiveBase"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>44</ArmorRating_Blunt>
				</value>
			</li>

			<!-- ========== VOID Reactive Armor - Helmet ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[@Name="RH_ReactiveHelmet_VOIDBase"]/statBases</xpath>
				<value>
					<Bulk>100</Bulk>
					<WornBulk>15</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[@Name="RH_ReactiveHelmet_VOIDBase"]/equippedStatOffsets</xpath>
				<value>
					<CarryBulk>50</CarryBulk>
					<SmokeSensitivity>-1</SmokeSensitivity>
					<Suppressability>-1.0</Suppressability>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[@Name="RH_ReactiveHelmet_VOIDBase"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>32</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[@Name="RH_ReactiveHelmet_VOIDBase"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>44</ArmorRating_Blunt>
				</value>
			</li>

			</operations>
			</match>
		</Operation>
	</Patch>