<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Medical System Expansion - Revived</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- ==== Bionic Modules  ==== -->
				<!-- MSE_BionicArmModule -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/HediffDef[defName="MSE_BionicArmModule"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>fist</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
								<power>3</power>
								<cooldownTime>1.66</cooldownTime>
								<armorPenetrationBlunt>0.75</armorPenetrationBlunt>
							</li>
						</tools>
					</value>
				</li>
				<!-- MSE_BionicHandModule -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/HediffDef[defName="MSE_BionicHandModule"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>claw</label>
								<capacities>
									<li>Scratch</li>
								</capacities>
								<power>7</power>
								<cooldownTime>1.26</cooldownTime>
								<armorPenetrationBlunt>0.25</armorPenetrationBlunt>
								<armorPenetrationSharp>0.01</armorPenetrationSharp>
							</li>
						</tools>
					</value>
				</li>
				<!-- MSE_BionicFingerModule -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/HediffDef[defName="MSE_BionicFingerModule"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>stinger</label>
								<capacities>
									<li>Stab</li>
								</capacities>
								<power>1</power>
								<cooldownTime>0.84</cooldownTime>
								<armorPenetrationBlunt>0.05</armorPenetrationBlunt>
								<armorPenetrationSharp>0.02</armorPenetrationSharp>
							</li>
						</tools>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>