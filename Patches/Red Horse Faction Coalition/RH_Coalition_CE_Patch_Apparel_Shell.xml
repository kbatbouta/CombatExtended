<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[RH] Faction: Coalition</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

			<!-- ========== Tactical Poncho ========== -->

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="RNApparel_TacticalPonchoCape"]/statBases</xpath>
				<value>
					<Bulk>2</Bulk>
					<WornBulk>1.5</WornBulk>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="RNApparel_TacticalPonchoCape"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
					<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
				</value>
			</li>

			</operations>
		</match>
	</Operation>
</Patch>